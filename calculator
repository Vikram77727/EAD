      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    .calculator {
      width: 260px;
      background: #222;
      padding: 15px;
      border-radius: 10px;
      box-shadow: 0px 4px 12px rgba(0,0,0,0.2);
    }
    #display {
      width: 100%;
      height: 50px;
      margin-bottom: 15px;
      font-size: 22px;
      text-align: right;
      padding: 10px;
      border: none;
      border-radius: 5px;
    }
    .buttons {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 10px;
    }
    button {
      height: 45px;
      font-size: 18px;
      border: none;
      border-radius: 8px;
      background-color: #4CAF50;
      color: white;
      cursor: pointer;
